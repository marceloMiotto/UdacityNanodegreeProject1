<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_no_connection_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_connections"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Sorry :-(  No connections available!"
        android:visibility="gone"
        tools:visibility="visible"
        android:textColor="@color/colorAccent"

        />

    <GridView
        android:id="@+id/gridView_movies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/gridView_margin"
        android:horizontalSpacing="@dimen/gridView_spacing"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/gridView_spacing"
        tools:visibility="gone"
        />
</LinearLayout>

